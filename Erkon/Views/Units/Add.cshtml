@model Erkon.Models.UnitModel
@{
}

<h1>Add New Unit</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Room Number</label>
        <input type="text" class="form-control" asp-for="RoomNumber" maxlength="5" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Room Location</label>
        <input type="text" class="form-control" asp-for="RoomLocation" maxlength="50" required>
    </div>    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>