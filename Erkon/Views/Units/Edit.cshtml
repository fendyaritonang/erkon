@model Erkon.Models.UnitModel
@{
}

<h1>Edit Unit</h1>
<form method="post" action="Edit">
    <div class="mb-3">
        <label for="" class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Room Number</label>
        <input type="text" class="form-control" asp-for="RoomNumber" maxlength="5" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Room Location</label>
        <input type="text" class="form-control" asp-for="RoomLocation" maxlength="50" required>
    </div>    
    <button type="submit" class="btn btn-primary" name="submit" value="submit">Submit</button>
    <button type="submit" class="btn btn-danger" name="submit" value="inactivate" onclick="return confirm('Are you sure you want to remove this unit?')">Inactivate</button>
</form>